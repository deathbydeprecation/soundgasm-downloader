{
  "manifest_version": 2,
  "name": "Soundgasm Downloader",
  "version": "1.2",
  "description": "Download audio files from soundgasm.net",
  "background": {
    "scripts": ["background-script.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://soundgasm.net/u/*/*"],
      "js": ["content-script.js"]
    }
  ],
  "icons": { "128": "logo.png" },
  "permissions": ["downloads"]
}
